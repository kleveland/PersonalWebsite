mixin intro(id, color, imglink, maintext, subtext, bg)
    form(action='/admin/updateblock' method='post')
        input(type="hidden" name="id" value=id)
        input(type="hidden" name="type" value=0)
        div(class='txtinput')
            p Image Link (200x200):
            input(type='text' name='img' value=imglink)
        div(class='txtinput')
            p Main Text:
            input(type='text' name='maintext' value=maintext)
        div(class='txtinput')
            p Sub Text:
            input(type='text' name='subtext' value=subtext)
        div(class='txtinput')
            p Parallax BG URL:
            input(type='text' id='p_bg' name='p_bg' value=bg)
        div(class='txtinput')
            p BG Color:
            input(type='text' name='bgcolor' id='col'+id value=color)
        script.
            $('#col' + '#{id}').spectrum({
                preferredFormat: "rgb",
                color: "#{color}",
                showInput: true,
                showAlpha: true
            });
        input(class='submitbut' type='submit' value='Update')
