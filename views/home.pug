extends layout.pug
include sections/descrip.pug
include sections/intro.pug
include sections/list.pug
block content
    div(class='userdisp')
        if(user.passport != null && user.passport.user != null)
            if(user.passport.user.isAdmin)
                a(href='/admin') Admin
            a(href='/logout') Logout
            p= user.passport.user.dispName
        else
            a(href='/auth/google') Login
    div(class='navbar')
        ul
            each val,index in navLink
                li
                    a(href='#'+val)= nav[index]
    div(id='fullpage')
        each val,index in navType
            div(class='section')
                div(class='mainpanel ver' + index)
                    div(class='centerDiv')
                        div(class='col2 centerVert')
                        if(val==0)
                            +intro('http://via.placeholder.com/200x200','Kacey Cleveland','Computer Science and Statistics')
                        if(val==1)
                            +descrip
