extends layout.pug

block content
    div(class='userdisp')
        if(user.passport != null && user.passport.user != null)
            a(href='/logout') Logout
            p= user.passport.user.displayName
        else
            a(href='/auth/google') Login
    div(class='navbar')
        ul
            each val,index in navLink
                li
                    a(href='#'+val)= nav[index]
    div(id='fullpage')
        each val,index in nav
            div(class='section')
                div(class='mainpanel ver' + index)
                    div(class='centerDiv')
                        if(index==0)
                            div(class='col4 centerVert')
                                img(class='mainImg' src='http://via.placeholder.com/200x200')
                            div(class='col8 centerVert leftBorder padLeft')
                                h1(class='mainText')
                                h2(class='subText') Computer Science and Statistics
